<%-include("header") %>
<body>
    <div class="container" id="heading">
        <div class="showcase">
            <h1>To-Do List:</h1>
            <span><%= listCategory %></span>
        </div>

      
        
        <h5><%= day %></h5>
    </div>
    <div class="container">
        <% addNewItems.forEach((item) =>{ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value= "<%= item._id %>" onChange="this.form.submit();">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="list" value= <%= listCategory %>>

            </form>
            <% }) %>
  
        <form class="submit-item" action="/" method="post">
            <input type="text" name="item" placeholder="New task" autofocus autocomplete="off">
        
            <button type="submit" name="list" value= <%= listCategory %> >+</button>

        </form>
    </div>
</body>
<%-include("footer") %>

