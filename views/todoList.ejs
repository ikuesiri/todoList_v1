<%-include("header") %>
<body>
    <div class="container" id="heading">
        <div class="showcase">
            <h1>To-Do List:</h1>
            <span><%= listItem %></span>
        </div>

      
        
        <h5><%= day %></h5>
    </div>
    <div class="container">
        <% for( i = 0; i < addNewItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= addNewItems[i]%></p>

            </div>
           
        <% } %>
  
        <form action="/" method="post">
            <input type="text" name="item" placeholder="New task" autofocus autocomplete="off">
        
            <button type="submit" name="list" value= <%=listItem %> >+</button>

        </form>
    </div>
</body>
<%-include("footer") %>

